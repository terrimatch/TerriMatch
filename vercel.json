{
  "version": 2,
  "builds": [
    {
      "src": "backend/src/api/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/src/api/index.js"
    },
    {
      "src": "/telegram",
      "dest": "backend/src/api/index.js"
    }
  ],
  "env": {
    "TELEGRAM_BOT_TOKEN": "@telegram-bot-token",
    "TELEGRAM_WEBAPP_URL": "@telegram-webapp-url"
  }
}
