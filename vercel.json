{
  "version": 2,
  "builds": [
    {
      "src": "server/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/webhook",
      "dest": "/server/index.js",
      "methods": ["POST", "GET"]
    },
    {
      "src": "/health",
      "dest": "/server/index.js",
      "methods": ["GET"]
    },
    {
      "src": "/(.*)",
      "dest": "/server/index.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
